{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Nest.js Application",
      "program": "${workspaceFolder}/node_modules/.bin/ts-node",
      "args": [
        "-r",
        "tsconfig-paths/register",
        "${workspaceFolder}/src/main.ts"
      ],
      "runtimeArgs": ["--nolazy", "-r", "tsconfig-paths/register"],
      "sourceMaps": true,
      "cwd": "${workspaceFolder}",
      "env": {
        "NODE_ENV": "production"
      },
      "outputCapture": "std"
    }
  ]
}
